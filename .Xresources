! #include ".Xresources.d/colors"
! do not scroll with output
URxvt*scrollTtyOutput: false
URxvt.scrollBar: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! manage font size with extension
URxvt.perl-ext-common: ...,font-size
URxvt.keysym.C-equal: perl:font-size:increase
URxvt.keysym.C-minus: perl:font-size:decrease

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! URxvt.font: 9x15
! URxvt.font:     xft:bitstream vera sans mono:size=14:antialias=true,xft:terminesspowerline:size=12
URxvt*font: xft:Source\ Code\ Pro\ Medium:pixelsize=15:antialias=true:hinting=true,xft:Source\ Code\ Pro\ Medium:pixelsize=15:antialias=true:hinting=true
URxvt*boldfont: xft:Source\ Code\ Pro\ Bold:pixelsize=15:antialias=true:hinting=true,xft:Source\ Code\ Pro\ Medium:pixelsize=15:antialias=true:hinting=true

! URxvt.boldFont: xft:bitstream vera sans mono:bold:size=14:antialias=true
!URxvt.color12: rgb:5c/5c/ff
